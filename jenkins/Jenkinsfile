pipeline {
    agent any

    environment {
        DOCKER_IMAGE_PREFIX = 'microservices'
        BUILD_NUMBER = "${env.BUILD_NUMBER}"
        BRANCH_NAME = "${env.BRANCH_NAME ?: 'main'}"
    }

    triggers {
        pollSCM('H/5 * * * *')
    }

    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
        timeout(time: 20, unit: 'MINUTES')
        timestamps()
    }

    stages {
        stage('Checkout') {
            steps {
                echo "üöÄ Starting pipeline for ${env.JOB_NAME} #${env.BUILD_NUMBER}"
                echo "üìÇ Branch: ${env.BRANCH_NAME}"
                checkout scm
                echo "‚úÖ Repository checked out successfully"
            }
        }

        stage('Verify Services') {
            steps {
                echo "üîç Verifying project structure..."
                sh '''
                    echo "Listing services:"
                    ls -la services/
                    
                    echo "Checking Docker Compose:"
                    docker-compose --version || docker compose version
                    
                    echo "Checking Docker:"
                    docker --version
                '''
                echo "‚úÖ Verification completed"
            }
        }

        stage('Health Check Running Services') {
            steps {
                echo "üè• Checking if services are already running..."
                script {
                    sh '''
                        echo "API Gateway:"
                        curl -s http://api-gateway:8080/health || echo "Not running"
                        
                        echo "Business Service:"
                        curl -s http://business-service:8081/health || echo "Not running"
                        
                        echo "Data Service:"
                        curl -s http://data-service:8082/health || echo "Not running"
                        
                        echo "Prometheus:"
                        curl -s http://prometheus:9090/-/healthy || echo "Not running"
                        
                        echo "Grafana:"
                        curl -s http://grafana:3000/api/health || echo "Not running"
                    '''
                }
            }
        }

        stage('Build Docker Images') {
            parallel {
                stage('API Gateway') {
                    steps {
                        dir('services/api-gateway') {
                            echo "üê≥ Building API Gateway..."
                            script {
                                sh """
                                    docker build -t ${env.DOCKER_IMAGE_PREFIX}/api-gateway:${env.BUILD_NUMBER} .
                                    docker tag ${env.DOCKER_IMAGE_PREFIX}/api-gateway:${env.BUILD_NUMBER} ${env.DOCKER_IMAGE_PREFIX}/api-gateway:latest
                                """
                            }
                            echo "‚úÖ API Gateway built"
                        }
                    }
                }
                
                stage('Business Service') {
                    steps {
                        dir('services/business-service') {
                            echo "üê≥ Building Business Service..."
                            script {
                                sh """
                                    docker build -t ${env.DOCKER_IMAGE_PREFIX}/business-service:${env.BUILD_NUMBER} .
                                    docker tag ${env.DOCKER_IMAGE_PREFIX}/business-service:${env.BUILD_NUMBER} ${env.DOCKER_IMAGE_PREFIX}/business-service:latest
                                """
                            }
                            echo "‚úÖ Business Service built"
                        }
                    }
                }
                
                stage('Data Service') {
                    steps {
                        dir('services/data-service') {
                            echo "üê≥ Building Data Service..."
                            script {
                                sh """
                                    docker build -t ${env.DOCKER_IMAGE_PREFIX}/data-service:${env.BUILD_NUMBER} .
                                    docker tag ${env.DOCKER_IMAGE_PREFIX}/data-service:${env.BUILD_NUMBER} ${env.DOCKER_IMAGE_PREFIX}/data-service:latest
                                """
                            }
                            echo "‚úÖ Data Service built"
                        }
                    }
                }
            }
        }

        stage('List Built Images') {
            steps {
                echo "ÔøΩÔøΩ Listing built Docker images..."
                sh '''
                    echo "Images built in this pipeline:"
                    docker images | grep microservices || echo "No images found"
                '''
            }
        }

        stage('Test Report') {
            steps {
                echo "üìä Pipeline Summary:"
                script {
                    sh """
                        echo "=================================="
                        echo "Build Number: ${env.BUILD_NUMBER}"
                        echo "Branch: ${env.BRANCH_NAME}"
                        echo "Workspace: ${env.WORKSPACE}"
                        echo "Build URL: ${env.BUILD_URL}"
                        echo "=================================="
                    """
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ Pipeline completed successfully!"
        }
        failure {
            echo "‚ùå Pipeline failed! Check console output for details."
        }
        always {
            echo "üßπ Pipeline execution completed"
        }
    }
}
